<div class="container">
    <div class="col align-self-center">
        <div class="well">
            <%= simple_form_for @contact do |f| %>
                <%= f.input :name %>
                <%= f.input :email %>
                <%= f.input :message %>
                <%= f.submit "Get in touch!", class: "btn btn-info" %>
            <% end %>
        </div>
    </div>
</div>